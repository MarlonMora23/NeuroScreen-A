# Environment Variables - NeuroScreen-A
# Copy this file to .env and update values for your environment

# Frontend Configuration
# Development local: http://localhost:5173 (Vite dev server)
# Docker local: http://api:5000 (frontend comunica con backend por nombre del servicio)
# Production: YOUR_DOMAIN
VITE_API_URL=http://localhost:5000

# Backend Configuration
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=your-secret-key-change-in-production

# Database
POSTGRES_USER=eeguser
POSTGRES_PASSWORD=eegpassword
POSTGRES_DB=eegdb
POSTGRES_PORT=5432
DATABASE_URL=postgresql+psycopg://eeguser:eegpassword@db:5432/eegdb

# Redis
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# JWT
JWT_SECRET_KEY=J51FofOwnlOVwcBuzZrBWXBgCEnQNk1Xs6kLRh0jTeg
JWT_ACCESS_TOKEN_EXPIRES=3600

# CORS Configuration
# Frontend origins allowed to communicate with backend
# Development (localhost): http://localhost:5173 (Vite), http://localhost:80 (nginx)
# Docker (local containers): http://frontend:80, http://frontend
# Production: Use your actual domain
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:80,http://localhost,http://frontend:80,http://frontend,https://tudominio.com

# Application Settings
ALLOWED_HOSTS=localhost,127.0.0.1,api,frontend

# File Upload
MAX_CONTENT_LENGTH=104857600
UPLOAD_FOLDER=/app/uploads
